{
   "rules": {
      "Program": {
         ".read": true,
         ".write": "auth.uid != null"
      },
      "users": {
         "$user_id": {
            ".read": "$user_id === auth.uid",
            ".write": "$user_id === auth.uid"
         }
      },
      "admins": {
         "$websiteId": {
            ".read": "auth != null && root.child('admins/' + $websiteId + '/' + auth.uid).exists()",
            ".write": "auth != null && root.child('admins/' + $websiteId + '/' + auth.uid + '/role').val() === 'admin'"
         }
      },
      "websites": {
         "$website_id": {
            ".read": true,
            ".write": true
         }
      },
      "websiteIds": {
         ".read": true,
         ".write": true
      },
      "setupImages": {
         ".read": true,
         ".write": true
      }
   }
}
