{
   "database": {
      "rules": "database.rules.json"
   },
   "hosting": {
      "public": "build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
         {
            "source": "**",
            "destination": "/index.html"
         }
      ]
   },
   "emulators": {
      "auth": {
         "port": 9099
      },
      "database": {
         "port": 9000
      },
      "hosting": {
         "port": 5000
      },
      "ui": {
         "enabled": true
      },
      "singleProjectMode": true,
      "functions": {
         "port": 5001
      },
      "storage": {
         "port": 9199
      }
   },
   "functions": [
      {
         "source": "functions",
         "codebase": "default",
         "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
         ],
         "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
         ]
      }
   ],
   "storage": {
      "rules": "storage.rules"
   }
}
